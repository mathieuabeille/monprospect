<div class="head1">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: 'Adresse email',
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password, label: 'Mot de passe',
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <p>    <%= f.button :submit, "Connexion", class: 'btn-cta' %>
</p>


  </div>


<% end %>
    <p>        <%= link_to new_user_registration_path, class: "btn-cta" do %>
      Inscription
    <% end %></p>

</div>














