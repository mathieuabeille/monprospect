<div class="padding"></div>
<div class="container" >

<%= simple_form_for(@lead) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-board">
    <div class="form-item">
    <p>Je souhaite obtenir: <%= f.input :quantity, label: false, collection: [5, 6, 7, 8, 9, 10 ], default: 1 %> <p>rendez-vous de déficalisation  </p>
    </div>
    <div class="form-item">
      <p>en région: <%= f.input :region, label: false, collection: ["partout en France", 'Alsace','Aquitaine','Auvergne' ,'Basse-Normandie' ,'Bourgogne','Bretagne','Centre' ,'Champagne-Ardenne','Corse','Franche-Comté','Haute-Normandie' ,'Ile-de-France' ,'Languedoc-Roussillon' ,'Limousin','Lorraine','Midi-Pyrénées','Nord-Pas-de-Calais','Pays de la Loire','Picardie','Poitou-Charentes','PACA','Rhône-Alpes','DOM'], default: "partout en France",  class: "form-item" %></p>
    </div>
    <div class="form-item">
      <p>mon email est: <%= f.input :email, label: false %></p> <p> et je suis joignable au: <%= f.input :number, label: false %></p>
    </div>


  <div class="form-item">
    <%= f.button :submit,  'Simuler un devis', class: "btn-cta" %>


  </div>
  </div>


<% end %>

</div>
